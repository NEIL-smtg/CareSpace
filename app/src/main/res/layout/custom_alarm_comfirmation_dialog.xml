<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="16dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/alarm_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your alarm : 8:20pm"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/edittext_addAlarmDescription"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:inputType="textMultiLine"
            android:hint="Add description for this alarm..."
            android:textAlignment="center"
            />

        <ImageButton
            android:id="@+id/btnConfirm_custom_alarm"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/edittext_addAlarmDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_tick"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>